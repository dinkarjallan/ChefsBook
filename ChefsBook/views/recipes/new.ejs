<% layout('layouts/boilerplate.ejs') %>
    <div class="page-wrap">
        <h1 class="page-header">Cook a New Recipe</h1>
        <form action="/recipes" method="POST" class="form form-create" enctype="multipart/form-data">
            <label for="name">Name of the Recipe:</label>
            <input id="name" type="text" name="name" placeholder="Name of the Recipe..." required>
            <label for="description">Description:</label>
            <textarea id="description" name="description" maxlength="280"
                placeholder="Describe your Recipe..."></textarea>
            <label for="image">Upload a Photo:</label>
            <input id="image" type="file" name="image" class="file-input" required>
            <label for=" prep-time">Prep Time:</label>
            <input id="prep-time" type="number" name="time[prep]" placeholder="In minutes..." required>
            <label for="cook-time">Cook Time:</label>
            <input id="cook" type="number" name="time[cook]" placeholder="In minutes..." required>
            <label for="cuisine">Cuisine:</label>
            <input id="cuisine" type="text" name="cuisine" placeholder="Cuisine..." required>
            <label for="servings">Servings:</label>
            <input type="number" id="servings" name="servings" placeholder="Enter..." required>
            <label for="course">Course:</label>
            <select name="course" id="course">
                <option value="Starters">Starters</option>
                <option value="Main">Main</option>
                <option value="Dessert">Dessert</option>
                <option value="Snacks">Snacks</option>
            </select>
            <label for="level">Difficulty level:</label>
            <select name="level" id="level">
                <option value="Easy">Easy</option>
                <option value="Medium">Medium</option>
                <option value="Hard">Hard</option>
            </select>
            <label for="diet">Diet:</label>
            <select name="diet" id="diet">
                <option value="Vegetarian">Vegetarian</option>
                <option value="Non-Vegetarian">Non-Vegetarian</option>
            </select>
            <label for="ingredients">Add Ingredients:</label>
            <div class="wrapper" id="ingred-wrapper">
                <input type="text" name="ingredients[0]" placeholder="Add Ingredient...">
            </div>
            <div class="button-wrap">
                <button class="add" type="button" onclick="addIngred()">Add Ingredient</button>
                <button class="remove" type="button" onclick="removeLastIngred()">Remove last Ingredient</button>
            </div>
            <label for="steps">Tell us How to prepare:</label>
            <div class="wrapper" id="step-wrapper">
                <input type="text" name="steps[0]" placeholder="Step-1">
            </div>
            <div class="button-wrap">
                <button class="add" type="button" onclick="addStep()">Add Step</button>
                <button class="remove" type="button" onclick="removeLastStep()">Remove last Step</button>
            </div>

            <button type="submit" class="submit-btn">Create My Recipe</button>
        </form>
    </div>